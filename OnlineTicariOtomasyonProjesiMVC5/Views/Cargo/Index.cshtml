@using OnlineTicariOtomasyonProjesiMVC5.Models.Classes
@model List<CargoDetails>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3">Kargolar</h2>
<br />
@using (Html.BeginForm("Index", "Cargo", FormMethod.Get))
{
    <div class="d-flex justify-content-between">
       
        <p>
            Kargo Takip Numarası:   @Html.TextBox("p")
            <input type="submit" value="Ara"  />
        </p>
    </div>
}
<table class="table table-bordered" style="margin-top:1.4rem">
    <tr>
        <th>Kargo Takip No</th>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var k in Model)
    {

        <tr>
            <td>@k.trackingCode</td>
            <td>@k.seller </td>
            <td>@k.buyer </td>
            <td>@k.date </td>
            <td><a href="/Cargo/cargoTracking/@k.trackingCode" class="btn btn-success">Detay</a></td>

        </tr>
    }
</table>

<a href="/Cargo/newCargo" class="btn btn-info">Yeni Kargo Girişi</a>