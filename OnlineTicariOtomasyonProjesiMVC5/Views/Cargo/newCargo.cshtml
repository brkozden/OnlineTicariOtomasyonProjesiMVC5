@model OnlineTicariOtomasyonProjesiMVC5.Models.Classes.CargoDetails
@{
    ViewBag.Title = "newCargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Kargo</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Takip Kodu")
    <input type="text" class="form-control" name="trackingCode" value="@ViewBag.trackingCode" readonly />
    <br />
    @Html.Label("Personel")
    @Html.TextBoxFor(x => x.seller, new { @class = "form-control" })
    <br />
    @Html.Label("Alıcı")
    @Html.TextBoxFor(x => x.buyer, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih")
    <input class="form-control" type="datetime-local" name="date" />
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.explanation, new { @class = "form-control" })
    <br />
    <button class="btn btn-info mt-3">Kaydet</button>
</form>