@model OnlineTicariOtomasyonProjesiMVC5.Models.Classes.Current
@{
    ViewBag.Title = "addCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Müşteri Ekleme</h2>
<br />
<form class="form-group" method="post">

    @Html.Label("Ad")
    @Html.TextBoxFor(x => x.currentName, new { @class = "form-control" })
    @Html.Label("Soyad")
    @Html.TextBoxFor(x => x.currentSurname, new { @class = "form-control" })
    @Html.Label("Şehir")
    @Html.TextBoxFor(x => x.currentCity, new { @class = "form-control" })
    @Html.Label("Mail")
    @Html.TextBoxFor(x => x.currentMail, new { @class = "form-control" })
    <button class="btn btn-info mt-3">Kaydet</button>
</form>

