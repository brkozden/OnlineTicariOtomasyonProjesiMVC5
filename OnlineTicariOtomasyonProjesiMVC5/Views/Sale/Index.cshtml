@using OnlineTicariOtomasyonProjesiMVC5.Models.Classes
@model List<SaleTransaction>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="d-flex justify-content-between border-bottom pb-3">
    <a href="/Sale/newSale" class="btn btn-info btn-lg" style="color:white">Yeni Satış Yap</a>
    <a href="/Sale/saleList" class="btn btn-danger btn-lg">Listeyi Dışa Ver</a>
</div>
<br />

<table id="tbl1" class="table table-bordered" style="margin-top:1.4rem">

    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Müşteri</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>
    </thead>
    @foreach (var k in Model)
    {

        <tr>
            <td>@k.saleId</td>
            <td>@k.products.productName </td>
            <td>@k.currents.currentName @k.currents.currentSurname  </td>
            <td>@k.employees.employeeName @k.employees.employeeSurname</td>
            <td>@k.count</td>
            <td>@k.price</td>
            <td>@k.total</td>
            <td>@k.date</td>


            <td><a href="/Sale/bringSale/@k.saleId" class="btn btn-info">Güncelle</a></td>
            <td><a href="/Sale/detailSale/@k.saleId" class="btn btn-success">Detay</a></td>

        </tr>

    }
</table>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

    $('#tbl1').dataTable({
        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"

        }
    });

</script>
