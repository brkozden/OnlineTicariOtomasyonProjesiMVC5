@using OnlineTicariOtomasyonProjesiMVC5.Models.Classes
@using PagedList
@using PagedList.Mvc   
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

               <table class="table table-bordered" style="margin-top:1.4rem">
                   <tr>
                     
                       <th>Kategori Adı</th>
                       <th>Sil</th>
                       <th>Güncelle</th>
                   </tr>
                   @foreach (var k in Model)
                   {

               <tr>
                  
                   <td>@k.categoryName </td>
                   <td><a href="/Category/removeCategory/@k.categoryId" class="btn btn-danger">Sil</a></td>
                   <td><a href="/Category/bringCategory/@k.categoryId" class="btn btn-info">Güncelle</a></td>
               </tr>
                   }
               </table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}),new PagedListRenderOptions {
    LiElementClasses = new List<String>
    {"page-link" } })

<a href="/Category/addCategory"  class="btn btn-primary">Yeni Kategori Ekle</a>

